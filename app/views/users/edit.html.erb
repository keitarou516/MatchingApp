<h1 class="title resist_title">ユーザー情報の編集</h1>

<div class="content form">
  <div class="container">
    <%= form_for [@user] do |f| %>
		
		<div>
			<%= f.label :名前, style: { 'margin-right' => 8 } %><br />
			<%= f.text_field :name, placeholder: "名前", autofocus: true, value: "#{@user.name}" %>
		</div>

		<div>
			<%= f.label :メールアドレス, style: { 'margin-right' => 8 } %><br />
			<%= f.text_field :email, placeholder: "メールアドレス", value: "#{@user.email}" %>
		</div>

		<div>
			<%= f.label :会社名 %><br />
			<%= f.text_field :company_key, placeholder: "会社名", value: "#{@user.company.name}" %>
		</div>

		<div>
			<%= f.label :会社URL %><br />
			<%= f.text_field :url, placeholder: "会社URL", value: "#{@user.company.url}" %>
		</div>
		
		<div class="row">
			<div class="col10 push1">
				<%= button_tag type: "submit", class: "btn btn--block log-btn" do %>
				保存する<i class="icon-arrow-right"></i>
				<% end %>
			</div>
		</div>
	<% end %>
  </div>
</div>