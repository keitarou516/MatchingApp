<h1 class="title">登録している余剰情報一覧</h1>
	<div class="wrapper index">
		<div class="content index">
		<% @excesses.each do |excess| %>
			<div class="items">
				<h3><%= excess.name %></h3>
				<div class="item-info">
					<ul>
						<h4>募集期限</h4>
						<li><span>開始　</span><%= excess.start_date %></li>
						<li><span>終了　</span><%= excess.end_date %></li>
						<h4>余剰している人数</h4>
						<li><%= excess.resource %>人</li>
					</ul>
				</div>
				<div class="btns">
					<% unless params[:authentication_id] %>
						<%= button_to "編集する", "/companies/#{@company.id}/excesses/#{excess.id}/edit", method: :get, class: "search_btn" %>
						<%= button_to "削除する", "/companies/#{@company.id}/excesses/#{excess.id}", method: :delete, class: "search_btn", style: "background-color: red; color: white;" %>
					<% else %>
						<%= button_to "マッチした現場を見る", "/companies/#{@company.id}/excesses/#{excess.id}", method: :get, class: "search_btn", style: "width: 200px; background-color: #f30da2; color: white;" %>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
